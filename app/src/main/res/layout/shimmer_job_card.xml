<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    app:shimmer_auto_start="true"
    app:shimmer_duration="2500">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Job Details Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/shimmer_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="30dp"
            app:cardBackgroundColor="#A9AEB1"
            app:cardCornerRadius="16dp"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Placeholder for Job Title -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/shimmer_placeholder"
                    android:layout_marginBottom="8dp" />

                <!-- Placeholder for Company Name and Rating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/shimmer_placeholder" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shimmer_placeholder" />
                </LinearLayout>

                <!-- Placeholder for Location and Reviews -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_weight="2"
                        android:background="@drawable/shimmer_placeholder" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/shimmer_placeholder" />
                </LinearLayout>

                <!-- Placeholder for Salary and Post Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/shimmer_placeholder" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/shimmer_placeholder" />
                </LinearLayout>

                <!-- Placeholder for Description -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shimmer_placeholder" />

                    <!-- Placeholder for Post Date and Reviews -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shimmer_placeholder"
                            />
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shimmer_placeholder"
                            />

                    </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:id="@+id/shimmer_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_alignBottom="@id/shimmer_card"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/shimmer_placeholder" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/shimmer_placeholder" />
        </LinearLayout>


    </RelativeLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
