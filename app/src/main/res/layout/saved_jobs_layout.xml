<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16sp"
        app:cardElevation="32dp"
        android:layout_marginTop="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8sp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/job_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="8sp"
                    android:text="Android Developer"
                    android:textColor="@color/colorActionBarBackground"/>

<!--                <ImageView-->
<!--                    android:id="@+id/rating_img"-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="24dp"-->
<!--                    android:layout_marginEnd="5dp"-->
<!--                    android:src="@drawable/rating_img" />-->

                <TextView
                    android:id="@+id/job_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    app:drawableStartCompat="@drawable/rate_icon" />
            </LinearLayout>


            <TextView
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:textSize="16sp"
                android:text="Microsoft"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="3dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_weight="1"
                    android:text="Remote"
                    android:textSize="16sp"
                    android:maxLines="3"
                    app:drawableStartCompat="@drawable/location_img" />
                <TextView
                    android:id="@+id/salary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5 lpa"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:paddingEnd="3dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    app:drawableStartCompat="@drawable/rupees_img" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>