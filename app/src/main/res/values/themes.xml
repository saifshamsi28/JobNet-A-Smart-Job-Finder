<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JobNet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorActionBarBackground</item>
        <item name="colorPrimaryVariant">@color/colorActionBarBackground</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- To set the color of status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- for no action bar. -->
    <style name="Theme.JobNet.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="Theme.JobNet" parent="Base.Theme.JobNet" />

    <!-- Theme for action bar -->
    <style name="Theme.ChatsActionbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- You can customize action bar-related properties here -->
    </style>

    <style name="navigation_theme" >
        <item name="colorPrimary"> @color/colorActionBarTitleText</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlHighlight"> @color/nav_selected_item_background</item>
    </style>

    <!-- Color definitions -->
    <color name="primaryTextColor">#E9000000</color> <!-- Black for light mode -->
    <color name="secondaryTextColor">#D9666666</color>
    <color name="dividerColor">#AAE2DD</color>
    <color name="backgroundColor">#FFFFFF</color>

    <!-- Full screen dialog theme -->
    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Popup dialog animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

</resources>
